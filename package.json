{
  "name": "sturgis-api",
  "private": true,
  "version": "1.0.0",
  "description": "A simple library system built with Node.js & Svelte",
  "main": "index.js",
  "scripts": {
    "reset-deps": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "postinstall": "lerna bootstrap --no-ci",
    "start": "lerna run start --parallel",
    "test": "lerna run test --concurrency=1 --stream",
    "add": "lerna add",
    "lint": "eslint './packages/**/*.{js,jsx}'",
    "lint:fix": "eslint --fix './packages/**/*.{js,jsx}'",
    "cm": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krishnagopinath/sturgis-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krishnagopinath/sturgis/issues"
  },
  "homepage": "https://github.com/krishnagopinath/sturgis#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
