{
  "name": "sturgis-api",
  "version": "1.0.0",
  "description": "A simple library API",
  "main": "index.js",
  "scripts": {
    "start": "cross-env PGDATABASE=sturgisdev nodemon --inspect ./src/server.js",
    "test": "cross-env NODE_ENV=test PGDATABASE=sturgistest dotenv -- ava --verbose --serial",
    "migrate": "dotenv -- ley up",
    "rollback": "dotenv -- ley down -a",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint --fix '**/*.js",
    "cm": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krishnagopinath/sturgis-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krishnagopinath/sturgis-api/issues"
  },
  "homepage": "https://github.com/krishnagopinath/sturgis-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "app-root-path": "^3.0.0",
    "ava": "^3.7.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "dotenv-cli": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "ley": "^0.5.0",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "camelcase": "^6.0.0",
    "compression": "^1.7.4",
    "decamelize": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "http-status-codes": "^1.4.0",
    "postgres": "^1.0.2",
    "resultify": "^1.1.2"
  }
}
